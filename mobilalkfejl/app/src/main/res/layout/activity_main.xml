<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Email, kijelentkezés és foglalásaim jobb felső sarokban egymás alatt -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/userinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnMyReservations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foglalásaim"
            android:textSize="12sp"
            android:padding="4dp"
            android:minHeight="0dp"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kijelentkezés"
            android:textSize="12sp"
            android:padding="4dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginBottom="4dp" />

    </LinearLayout>

    <!-- Üdvözlő szöveg középen -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Üdvözöllek trazR biliárd termében!"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="80dp" />

    <!-- Asztalfoglalás gomb a welcomeText alatt -->
    <Button
        android:id="@+id/btnReservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foglalj asztalt"
        android:layout_below="@id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>
